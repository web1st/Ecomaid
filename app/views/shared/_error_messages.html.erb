<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <% @user.errors.full_messages.each do |msg| %>
      <li class= "field_with_errors"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>